<main>

    <div id="wrapper">
        <h1>Note Scraper</h1>
        <h2><i>iF yOu CaN dO tHiS, tHe HoMeWoRk ShOuLd Be No PrObLeM.</i></h2>

        <div id="articles">
            <!--If there are articles in the DB-->
            {{#if article}}
            <!--Create card for each article-->
            {{#each article}}
            <div class="card">
                <div class="card-content">
                    <a href="{{link}}" target="_blank">
                        <h4 class="card-title">{{title}}</h4>
                    </a>
                    <p class="summary">{{summary}}</p>
                </div>
                <!--button for saving/favoriting-->
                <a class="waves-effect waves-light btn" href="/saved" id="saveBtn"><i class="far fa-save"></i></a>
            </div>
            {{/each}}
            <!--Show empty card & scrape button if no articles in DB-->
            {{else}}
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">No articles yet - try scraping!</h4>
                    <a class="waves-effect waves-light btn" href="/scrape" id="scraperBtn">Scrape Articles</a></li>
                </div>
            </div>
            {{/if}}
        </div>

        <div id="comments"></div>
    </div>

</main>

{{!-- * Headline - the title of the article

 * Summary - a short summary of the article

 * URL - the url to the original article --}}



